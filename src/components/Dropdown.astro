---
import { Icon } from 'astro-icon/components';

interface DropdownItem {
  title: string;
  href: string;
  icon?: string;
}

interface Props {
  items: DropdownItem[];
  label: string;
  icon: string;
  className?: string;
}

const { items, label, icon, className = "" } = Astro.props;
---

<div class={className}>
  <div class="py-1">
    {items.map((item) => (
      <a
        href={item.href}
        class="flex items-center px-4 py-2 text-sm text-muted-foreground hover:bg-muted hover:text-foreground transition-colors duration-200"
      >
        {item.icon && <Icon name={item.icon} size={16} class="mr-2" />}
        {item.title}
      </a>
    ))}
  </div>
</div>