---
import '../styles/globals.css'
import Navbar from '../components/Navbar.astro';
import { blogCategories } from '../data/blogCategories';

interface Props {
  title: string;
  categories?: Array<{
    title: string;
    slug: string;
    icon?: string;
  }>;
}

// Use provided categories or fallback to blogCategories
const { title, categories = blogCategories } = Astro.props;


