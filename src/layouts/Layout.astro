---
interface Props {
	title: string;
  }
  
  const { title } = { title: "The Complete Guide to Pickleball" };
---
  
  <!doctype html>
  <html lang="en" class="dark">
	<head>
	  <meta charset="UTF-8" />
	  <meta name="description" content="Complete guide to pickleball" />
	  <meta name="viewport" content="width=device-width" />
	  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	  <meta name="generator" content={Astro.generator} />
	  <title>{title}</title>
	</head>
	<body class="bg-gradient-to-br bg-[#1E1E1E] text-gray-100 min-h-screen">
	  <header class="bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600">
		<nav class="max-w-6xl mx-auto px-4 py-6 flex items-center justify-between">
		  <div class="flex items-center">
			<img src="/logo.png" alt="Logo" class="w-10 h-10 mr-3">
			<span class="text-white text-lg font-bold">
			  <a href="/">Pickleball Info</a>
			</span>
		  </div>
		  <button id="hamburger" class="lg:hidden text-white text-2xl focus:outline-none">
			â˜°
		  </button>
		  <ul class="hidden lg:flex space-x-6">
			<li><a href="/" class="hover:text-white transition-colors">Home</a></li>
			<li><a href="/blog" class="hover:text-white transition-colors">Blog</a></li>
			<li><a href="/courses" class="hover:text-white transition-colors">Courses</a></li>
			<li><a href="/equipment" class="hover:text-white transition-colors">Equipment</a></li>
			<li><a href="/rules" class="hover:text-white transition-colors">Rules</a></li>
			<li><a href="/techniques" class="hover:text-white transition-colors">Techniques</a></li>
		  </ul>
		</nav>
	  </header>
	  <main class="py-8 px-4">
		<slot />
	  </main>
	  <footer class="bg-[#1E1E1E] text-white py-8">
		<div class="container mx-auto text-center grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 px-4">
		  <div>
			<h2 class="text-xl font-semibold">Pickleball Guide</h2>
			<p class="mt-2 text-sm">Your comprehensive resource for learning and mastering the exciting sport of pickleball.</p>
			<div class="flex space-x-4 mt-4">
			  <a href="#" class="text-white"><i class="fab fa-facebook"></i></a>
			  <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
			  <a href="#" class="text-white"><i class="fab fa-linkedin"></i></a>
			</div>
		  </div>
		  <div>
			<h3 class="text-lg font-semibold">Quick Links</h3>
			<ul class="mt-2 space-y-1 text-sm">
			  <li><a href="#" class="text-white hover:text-gray-300">About</a></li>
			  <li><a href="#" class="text-white hover:text-gray-300">Benefits</a></li>
			  <li><a href="#" class="text-white hover:text-gray-300">Equipment</a></li>
			  <li><a href="#" class="text-white hover:text-gray-300">Rules</a></li>
			</ul>
		  </div>
		  <div>
			<h3 class="text-lg font-semibold">Resources</h3>
			<ul class="mt-2 space-y-1 text-sm">
			  <li><a href="#" class="text-white hover:text-gray-300">Techniques</a></li>
			  <li><a href="#" class="text-white hover:text-gray-300">Community</a></li>
			  <li><a href="#" class="text-white hover:text-gray-300">FAQs</a></li>
			  <li><a href="#" class="text-white hover:text-gray-300">Testimonials</a></li>
			</ul>
		  </div>
		  <div>
			<h3 class="text-lg font-semibold">Stay Updated</h3>
			<form class="mt-2">
			  <input type="email" placeholder="Enter your email" class="w-full p-2 rounded bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-pink-500" />
			  <button type="submit" class="mt-2 w-full p-2 bg-gradient-to-r from-pink-500 to-purple-500 text-white rounded">Subscribe</button>
			</form>
		  </div>
		</div>
		<div class="max-w-6xl mx-auto px-4 py-6 text-center">
		  <p>&copy; {new Date().getFullYear()} Pickleball Guide. All rights reserved.</p>
		</div>
	  </footer>
	  <div id="modal" class="hidden fixed inset-0 bg-black bg-opacity-75 z-50 items-center justify-center">
		<div class="bg-white w-4/5 max-w-md rounded-lg p-6 text-center">
		  <button id="closeModal" class="absolute top-4 right-4 text-2xl text-gray-500 hover:text-gray-700 focus:outline-none">&times;</button>
		  <ul class="space-y-4">
			<li><a href="/" class="text-lg text-gray-800 hover:text-purple-600 transition-colors">Home</a></li>
			<li><a href="/blog" class="text-lg text-gray-800 hover:text-purple-600 transition-colors">Blog</a></li>
			<li><a href="/courses" class="text-lg text-gray-800 hover:text-purple-600 transition-colors">Courses</a></li>
			<li><a href="/equipment" class="text-lg text-gray-800 hover:text-purple-600 transition-colors">Equipment</a></li>
			<li><a href="/rules" class="text-lg text-gray-800 hover:text-purple-600 transition-colors">Rules</a></li>
			<li><a href="/techniques" class="text-lg text-gray-800 hover:text-purple-600 transition-colors">Techniques</a></li>
		  </ul>
		</div>
	  </div>
	  <script>
		const hamburger = document.getElementById('hamburger');
		const modal = document.getElementById('modal');
		const closeModal = document.getElementById('closeModal');
  
		hamburger.addEventListener('click', () => modal.classList.remove('hidden'));
		closeModal.addEventListener('click', () => modal.classList.add('hidden'));
		modal.addEventListener('click', (event) => {
		  if (event.target === modal) modal.classList.add('hidden');
		});
	  </script>
	</body>
  </html>