---
import Layout from '../../layouts/Layout.astro';
import { courses } from '../../data/courses';
---

<Layout title="Pickleball Courses">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold mb-12 text-center bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 text-transparent bg-clip-text">Pickleball Courses</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {courses.map((course) => (
        <div class="bg-gradient-to-br from-gray-800 to-gray-700 rounded-xl shadow-xl overflow-hidden border border-gray-700">
          <div class="p-6">
            <h2 class="text-xl font-bold mb-2 text-purple-400">{course.title}</h2>
            <p class="text-gray-300 mb-4">{course.description}</p>
            <p class="text-sm text-gray-400 mb-4">{course.lessons.length} Lessons</p>
            <a 
              href={`/courses/${course.id}`}
              class="inline-block bg-gradient-to-r from-purple-600 to-pink-600 text-white px-6 py-2 rounded-lg hover:from-purple-700 hover:to-pink-700 transition-colors"
            >
              Start Learning
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>