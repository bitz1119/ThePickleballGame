---
import Layout from '../../layouts/Layout.astro';

const categories = [
  {
    title: 'Gear & Fitness',
    description: 'Tips and insights for maintaining your pickleball health',
    icon: '‚ù§Ô∏è',
    slug: 'health',
    gradient: 'from-green-500 to-emerald-700'
  },
  {
    title: 'Courts & Community',
    description: 'Reviews and guides about pickleball gear',
    icon: 'üèì',
    slug: 'equipments',
    gradient: 'from-blue-500 to-indigo-700'
  },
  {
    title: 'Game Basics',
    description: 'Everything you need to know about pickleball',
    icon: '‚ÑπÔ∏è',
    slug: 'information',
    gradient: 'from-purple-500 to-violet-700'
  },
  {
    title: 'News & Events',
    description: 'Latest updates from the pickleball world',
    icon: 'üì∞',
    slug: 'news',
    gradient: 'from-pink-500 to-rose-700'
  }
];
---

<Layout title="Pickleball Blog">
  <div class="w-full max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <header class="text-center mb-16">
      <h1 class="text-5xl font-bold bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500 bg-clip-text text-transparent mb-6">
        Pickleball Blog
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Explore our articles across different categories
      </p>
    </header>

    <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8">
      {categories.map(category => (
        <a 
          href={`/${category.slug}`}
          class="group relative bg-white/80 dark:bg-gray-900/80 backdrop-blur-lg rounded-2xl shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(0,0,0,0.16)] border border-gray-200/50 dark:border-gray-700/50 overflow-hidden transition-all duration-300 hover:-translate-y-1"
        >
          <div class={`absolute inset-0 bg-gradient-to-br ${category.gradient} opacity-10 group-hover:opacity-20 transition-opacity duration-300`}></div>
          <div class="relative p-8">
            <div class="flex items-center justify-between mb-4">
              <span class="text-4xl">{category.icon}</span>
              <svg class="w-6 h-6 text-gray-400 group-hover:text-gray-600 dark:text-gray-500 dark:group-hover:text-gray-400 transform group-hover:translate-x-1 transition-all duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
            <h2 class={`text-3xl font-bold bg-gradient-to-r ${category.gradient} bg-clip-text text-transparent mb-3`}>
              {category.title}
            </h2>
            <p class="text-gray-600 dark:text-gray-300 text-lg">
              {category.description}
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>