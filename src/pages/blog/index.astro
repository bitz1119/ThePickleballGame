---
import Layout from '../../layouts/Layout.astro';
import { blogPosts } from '../../data/blogPosts';
---

<Layout title="Pickleball Blog">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold mb-12 text-center bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 text-transparent bg-clip-text">Pickleball Blog</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {blogPosts.map((post) => (
        <a href={`/blog/${post.id}`} class="block">
          <div class="bg-gradient-to-br from-gray-800 to-gray-700 p-6 rounded-xl shadow-xl hover:scale-105 transition-transform duration-300 border border-gray-700">
            <h2 class="text-xl font-bold mb-2 text-white">{post.title}</h2>
            <p class="text-white mb-2">{post.body.substring(0, 150)}...</p>
            <div class="text-sm text-white ">
              <span>{post.author}</span>
              <span class="mx-2">â€¢</span>
              <span>{new Date(post.date).toLocaleDateString()}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>