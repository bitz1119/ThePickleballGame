---
import Layout from '../../layouts/Layout.astro';
import { parseISO } from 'date-fns';

// Dynamically import all blog posts
const allPosts = await Astro.glob('../generated-blog/*.md');

// Sort posts by date (most recent first)

const sortedPosts = allPosts.sort((a, b) => {
  return new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime();
});

console.log("sortedPosts : " , sortedPosts[0].frontmatter);
---

<Layout title="Blog Posts">
  <div class="w-full max-w-6xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold text-pink-400 mb-4 tracking-tight">
        Latest Blog Posts
      </h1>
      <p class="text-xl text-pink-300 max-w-2xl mx-auto">
        Explore our collection of recent articles and insights
      </p>
    </header>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {sortedPosts.map((post) => (
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <a href={post.url} class="block">
            <div class="p-6">
              <h2 class="text-2xl font-semibold text-blue-700 mb-3 hover:text-blue-900 transition-colors">
                {post.frontmatter.title}
              </h2>
              <p class="text-gray-600 mb-4 overflow-hidden text-ellipsis line-clamp-3">
                {post.frontmatter.description}
              </p>
              <div class="flex items-center justify-between text-sm text-gray-500">
                <time datetime={post.frontmatter.date} class="font-medium">
                  {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <span class="text-blue-600 hover:underline">
                  Read more â†’
                </span>
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>

    {sortedPosts.length === 0 && (
      <div class="text-center py-12">
        <p class="text-xl text-gray-500">No blog posts found</p>
      </div>
    )}
  </div>
</Layout>