---
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await Astro.glob('../generated-blog/*.astro');
  return posts.map(post => ({
    params: { 
      slug: post.file.split('/').pop().replace('.astro', '')
    },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<Layout title={post.frontmatter.title}>
  <article class="max-w-2xl mx-auto p-4">
    <h1 class="text-4xl font-bold mb-6">{post.frontmatter.title}</h1>
    <time class="text-gray-500 block mb-8">
      {new Date(post.frontmatter.date).toLocaleDateString()}
    </time>
    <slot />
  </article>
</Layout>